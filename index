  <script>
    let visivel = false;

    function mostrarSaldo() {
      const saldoEl = document.getElementById('saldo');
      const botao = document.getElementById('botaoOlho');
      visivel = !visivel;

      if (visivel) {
        saldoEl.textContent = 'R$ 11.110,67';
        botao.textContent = '';
